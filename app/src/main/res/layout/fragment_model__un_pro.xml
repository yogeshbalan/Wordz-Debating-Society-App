<RelativeLayout 
    android:id="@+id/fragment_model"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yogesh.wordzapp.fragments.Model_UN_pro">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.Toolbar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pro_one"
        app:theme="@style/myCustomTheme">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:layout_gravity="center"
            android:id="@+id/toolbar_title" />
    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:id="@+id/f1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="5dp"
        android:layout_below="@+id/toolbar"
        android:background="@color/firstFrame"
        android:onClick="ShowBasic"
        >

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="bottom|center_horizontal"
            android:scaleType="center"
            android:background="@drawable/debate"
            android:id="@+id/basics"
            android:onClick="ShowBasic"/>

        <com.yogesh.wordzapp.utils.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rules Of Procedure"
            android:layout_gravity="bottom|left"
            app:typeface="fonts/Gotham-Medium.ttf"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:padding="10dp"/>

    </FrameLayout>


</RelativeLayout>