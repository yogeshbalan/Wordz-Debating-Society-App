<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yogesh.wordzapp.WordzSchedule">

    <android.support.v7.widget.Toolbar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:theme="@style/myCustomTheme"/>


    <LinearLayout
        android:id="@+id/wordzbasic"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/toolbar">

    <LinearLayout
        android:id="@+id/f1"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:layout_below="@+id/f1"
        android:background="#2C2C34"
        android:onClick="CALENDER"
        >

        <com.yogesh.wordzapp.utils.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MUN Calender"
            android:layout_gravity="center_vertical"
            app:typeface="fonts/Gotham-BoldItalic.ttf"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:padding="10dp"
            android:clickable="true"
            android:onClick="CALENDER"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/f2"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:layout_below="@+id/f1"
        android:background="#494850"
        android:onClick="MUNLIST"
        >

        <com.yogesh.wordzapp.utils.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MUN's List"
            android:layout_gravity="center_vertical"
            app:typeface="fonts/Gotham-BoldItalic.ttf"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:padding="10dp"
            android:clickable="true"
            android:onClick="MUNLIST"/>

    </LinearLayout>
    </LinearLayout>

</RelativeLayout>
